{
  "manifest_version": 2,
  "version": "1.0",
  "name": "Gmail Extension Test",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Chrome-React",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [ "http://mail.google.com/*", "https://mail.google.com/*" ],
      "js": ["content.js"]
    }
  ]
}
